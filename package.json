{
	"name": "unleash",
	"displayName": "Unleash",
	"description": "Unleash helps knowledge workers find all the organizational data they need to get the job done. With our cutting edge technology, receive relevant ranked results, from across your companyâ€™s apps, liberating you from the manual grunt work of sifting through various SaaS apps, internal knowledge bases, folders and email chains to find what you are looking for, saving you time and keeping you in the zone",
	"version": "1.0.6",
	"publisher": "UnleashLabs",
	"private": true,
	"icon":"resources/logo.png",
	"keywords": ["unleash","search","azure","azure devops", "google drive", "gdrive", "gsuite", "aws","github","jira","notion","confluence","atlassian","bitbucket","aws","amazon","gcp","google","asana","monday","zendesk","salesforce"],
	"license": "MIT",
	"galleryBanner": {
		"color": "#ffffff",
		"theme": "light"
	  },
	"repository": {
		"type": "git",
		"url": "https://github.com/chaseappio/unleash-client-vsc-extension"
	},
	"engines": {
		"vscode": "^1.50.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:unleash-search",
		"onCommand:unleash.search"
	
	],

	"main": "./dist/extension.js",

	"contributes": {
		"viewsContainers": {
			"activitybar": [
			{
				"id": "unleash-explorer",
				"title": "Unleash",
				"icon": "resources/logo.svg"
			}
			]
		},
		"views": {
			"unleash-explorer": [
			{
				"type": "webview",				
				"id": "unleash-search",
				"icon": "resources/logo.svg",
				"name":""
			}
			]
		},
		"commands": [
			
			{
				"command": "unleash.search",
				"category": "Search",				
				"title": "Search in Unleash",
				"icon": "resources/logo.svg"
			}
		],

		"keybindings": [
            {
                "command": "unleash.search",
                "key": "shift+space",
                "mac": "cmd+k"
            }
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"package": "vsce package",
		
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"typescript": "^4.7.2"
	}
}
